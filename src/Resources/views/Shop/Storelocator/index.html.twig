{% extends '@SyliusShop/layout.html.twig' %}

{% import '@SyliusUi/Macro/messages.html.twig' as messages %}

{% block title %}{{ 'jgabryelewicz_sylius_storelocator_plugin.ui.storelocators'|trans }}{% endblock %}

{% block content %}

    <div class="ui breadcrumb">
        <a href="{{ path('sylius_shop_homepage') }}" class="section">{{ 'sylius.ui.home'|trans }}</a>
        <div class="divider"> / </div>
        <div class="active section">
            {{ 'jgabryelewicz_sylius_storelocator_plugin.ui.storelocators'|trans }}
        </div>
    </div>

    <h1 class="ui monster section dividing header">
        {{ 'jgabryelewicz_sylius_storelocator_plugin.ui.storelocators'|trans }}
    </h1>

    <div class="ui grid">
        <div class="twelve column">
            <div class="ui three cards" id="storelocators-list">
                {% if storelocators|length > 0 %}
                    {% for storelocator in storelocators %}
                        {% include '@JgabryelewiczSyliusStorelocatorPlugin/Shop/Storelocator/Index/_show.html.twig' %}
                    {% endfor %}
                {% else %}
                    {{ messages.info('sylius.ui.no_results_to_display') }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}